<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    android:layout_gravity="center"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:clickable="false"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/cw_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/ll_v_cw">

        <ImageView
            android:id="@+id/iv_monument"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cw_txt"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/cw_txt"
            android:textSize="14sp"
            android:maxLines="4"
            android:singleLine="false"/>

        <TextView
            android:id="@+id/tv_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cw_read_more"
            android:textColor="@color/cw_txt"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:paddingTop="12dp"
            android:paddingBottom="10dp" />

        <Button
            android:id="@+id/b_go_monument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_monument"
            android:backgroundTint="@color/cw_b_bg"
            android:textColor="@color/cw_b_txt"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>



</android.support.v7.widget.CardView>


